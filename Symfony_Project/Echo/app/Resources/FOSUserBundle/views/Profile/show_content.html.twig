{% trans_default_domain 'FOSUserBundle' %}
{% import "macro_profile.html.twig" as profile %}

<h2>My FoSUser_Show_Content</h2>

{% if is_granted('ROLE_USER') %}
    <a href="{{ path('fos_user_profile_edit') }}">Edit Me</a>
{% endif %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p>Firstname: {{ user.firstname }}</p>
    <p>Lastname: {{ user.lastname }}</p>
    <p>Username: {{ user.username }}</p>
    <p>Postal Adress: {{ user.postalAdress }}</p>
</div>

<h2>Seller Stats:</h2>
<div>
	<p>Visit on your profile pages : {{ user.visitedBy|length() }}</p>
	<p>Visit per product : {{ profile.visitProduct(user.products) }}</p>
	<p>Visit per category : {{ profile.visitCat(user.products) }}</p>
</div>