char	*my_revstr(char *str);
int	my_putchar(char c);


int	my_putchar(char c)
{
  write(1, &c, 1);
}

char	*my_revstr(char *str)
{
  int	n;
  int	m;
  char	temp;
  
  n = 0;
  m = 0;
  temp = 0;
  while ( str[n] != '\0')
    {
      // printf("%d, %d,\n", n, str[n]);
      n++;
    }
  char	 revstr[n];
  n--;
  //printf("Ã©tape 1 finie, n=%d\n",n);
  while ( n != m && n > m)
    {
      temp = str[m];
      str[m] = str[n];
      str[n] = temp;
      // printf("%d, %d, %d, %d\n", n, m, revstr[m], str[n]);
      m++;
      n--;
    }
  // printf("%d\n",m);
  // printf("Ã©tape 2 finie\n%d,%d,%d,%d,%d,%d\n", str[0], str[1], str[2],str[3],str[4], str[5]);
  return(str);
}

