#include <unistd.h>
#include <stdio.h>

int	my_strupcase(char *);
void	my_putchar(char c);
char	my_charupcase(char c);


void	my_putchar(char c)
{
  write(1, &c, 1);
}

int	my_stupcase(char *str)
{
  int	i;

  i = 0;
  while (str[i] != '\0')
    {
      if (( str[i] >= 97 && str[i] <=122) || (str[i] >= 65 && str[i] <=90))
	{
	  i++;
	}
      else
	{
	  return(0);
	}
    }
  return(1);
}

char	my_charupcase(char c)
{
  char C;

  C = c - 32;
  return(C);
}

