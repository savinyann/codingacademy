#include <unistd.h>
#include <stdio.h>

void	my_putstr(char *str);
void	my_putchar(char c);

void	my_putchar(char c)
{
  write(1, &c, 1);
}

void	my_putstr(char *str)
{
  char	*i;

  i = &*str;
  while ( *i != '\0')
    {
      my_putchar(*i);
      i = &*i + 1;
    }
}

