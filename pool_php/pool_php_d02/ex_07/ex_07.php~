<?echo

function my_division_modulo($first_nbr, $oper_char, $second_nbr)
{
    echo gettype($first_nbr),"\n";
    switch($oper_char)
        {
        case "/":
            echo $first_nbr / $second_nbr;
            break;

        case "%":
            echo $first_nbr % $second_nbr;
            break;

        Default:
            echo "The given arguments aren't good.\n";
            break;
}

?>